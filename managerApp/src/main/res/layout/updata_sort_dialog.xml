<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/reader_dialog_datebaseManager"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_sortName_updataSortDialog"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="类别名称"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别编号 :"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout_sortName_updataSortDialog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout_sortName_updataSortDialog"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_sortName_updataSortDialog"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.962"/>

    <TextView
        android:id="@+id/textView_sortId_updataSortDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout_sortName_updataSortDialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="注意：删除类别将删除此类下所有书籍！"
        android:textColor="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout_sortName_updataSortDialog"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout_sortName_updataSortDialog"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_sortName_updataSortDialog"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>